<Page
    x:Class="App9.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App9"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ProgressBar x:ConnectionId='1' x:Name="ChildProgress" HorizontalAlignment="Left" Height="44" Margin="939,91,0,0" VerticalAlignment="Top" Width="401"                                        />
        <Button x:ConnectionId='2' x:Name="btnStart"  Content="Start" HorizontalAlignment="Left" Margin="166,126,0,0" VerticalAlignment="Top" Height="66" Width="190"                     />
        <Button x:Name="btnPause" Content="Pause Timer" HorizontalAlignment="Left" Margin="166,232,0,0" VerticalAlignment="Top" Height="66" Width="190"/>
        <Button x:Name="btnp15" Content="+15" HorizontalAlignment="Left" Margin="166,325,0,0" VerticalAlignment="Top" Height="66" Width="190"/>
        <Button x:Name="btnp30" Content="+30" HorizontalAlignment="Left" Margin="166,420,0,0" VerticalAlignment="Top" Height="66" Width="190"/>
        <TextBlock x:Name="ShowMin" HorizontalAlignment="Left" Margin="939,185,0,0" TextWrapping="Wrap" Text="60" VerticalAlignment="Top" Height="106" Width="91" FontSize="72"/>
        <TextBlock x:Name="TimeLeft" HorizontalAlignment="Left" Height="63" Margin="1030,198,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="310" FontSize="48">
        	<Run Text="Minutes to go"/>
        	<LineBreak/>
        	<Run/>
        </TextBlock>


    </Grid>
</Page>

